                                    <ListBoxItem Content="Hello1"></ListBoxItem>
                                    <ListBoxItem Content="Hello1"></ListBoxItem>
                                    <ListBoxItem Content="Hello1"></ListBoxItem>
                                    <ListBoxItem Content="Hello1"></ListBoxItem>
                                </ListBox.Items>
                            </ListBox>
                        </ScrollViewer>
                    </StackPanel>
                </ScrollViewer>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="OK" HorizontalAlignment="Stretch" />
                    <Button Grid.Column="2" Content="Cancel" HorizontalAlignment="Stretch" />
                </Grid>
            </Grid>
        </Controls:Flyout>
    </Controls:MetroWindow.Flyouts>
</Controls:MetroWindow>
